@using Microsoft.AspNetCore.Identity
@model IEnumerable<MobileShop.Models.Seller>
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (User.IsInRole("Admin") && SignInManager.IsSignedIn(User))
{
    <span>
        <a asp-action="Create" class="btn btn-success"><span class="fa fa-plus-square"></span> Add new Seller</a>
    </span>
    <span>
        <a asp-action="SearchForm" class="btn btn-success"><span class="fa fa-search"></span> Search Seller</a>
    </span>
}
<table class="table mt-1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td style="text-align:center;">
                    @if (User.IsInRole("Admin") && SignInManager.IsSignedIn(User))
                    {
                      <a asp-action="Edit" asp-route-id="@item.Id"><span style="color: green;" class="fa fa-edit">&nbsp;&nbsp;</span></a>
                      <a asp-action="Delete" asp-route-id="@item.Id"><span style="color:red;" class="fa fa-trash"></span></a>
                    }
                
            </td>
        </tr>
}
    </tbody>
</table>
