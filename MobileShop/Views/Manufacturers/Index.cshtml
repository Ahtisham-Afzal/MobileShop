@using Microsoft.AspNetCore.Identity
@model IEnumerable<MobileShop.Models.Manufacturer>
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <a asp-action="Create"><button class="btn btn-success"><span class="fa fa-plus-square"></span> Add new Manufacturer</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img style="width:100px;" src="@item.Image" alt="@item.Name" />
            </td>
            <td>
                    @if (SignInManager.IsSignedIn(User))
                    {
                       <a asp-action="Edit" asp-route-id="@item.Id">Edit</a><span>|</span>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> <span>|</span>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                
            </td>
        </tr>
}
    </tbody>
</table>
